<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:background="@color/white"
	android:fitsSystemWindows="true"
    android:clipToPadding="false">
	<TextView
		android:id="@+id/file_hidden"
		android:layout_gravity="right"
		android:layout_width="wrap_content"
		android:layout_height="0dp"/>
	<LinearLayout
		android:id="@+id/themeLayout"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/title_height"
		android:layout_alignParentTop="true"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:background="@color/title">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:src="@drawable/ic_launcher"/>

		<LinearLayout
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"
			android:layout_weight="1.0"
			android:paddingLeft="2dp"
			android:paddingRight="5dp"
			android:paddingBottom="2dp"
			android:orientation="vertical"
			android:gravity="center_vertical">
			<TextView
				android:id="@+id/txt_fileTitle"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="/"
				android:textColor="#Ffffff"
				android:textSize="18sp"
				android:singleLine="true"/>
			<TextView
				android:id="@+id/txt_fileParent"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="/"
				android:textColor="#E1E1E1"
				android:textSize="13sp"
				android:singleLine="true"/>
		</LinearLayout>

		<ImageButton
			android:id="@+id/btn_fileopt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/bg_btn_title"
			android:layout_gravity="right|center_vertical"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:adjustViewBounds="true"
			android:paddingRight="10dp"/>

	</LinearLayout>
	
	<ListView
		android:id="@+id/file_listView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1">
	</ListView>
	
	<LinearLayout
		android:id="@+id/file_copyBar"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:visibility="gone">
		<Button
			android:id="@+id/btn_filePaste"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="@drawable/bg_btn_options"
			android:layout_weight="1"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:text="@string/paste"/>
		<Button
			android:id="@+id/btn_cancelPaste"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="@drawable/bg_btn_options"
			android:layout_weight="1"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:text="@string/cancel"/>
	</LinearLayout>
</LinearLayout>

